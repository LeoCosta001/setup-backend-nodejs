{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": ["standard"],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": ["@typescript-eslint"],
    "rules": {
        "semi": [2, "always"],
        "indent": ["error", 4],
        "@typescript-eslint/no-unused-vars": [
            "error",
            { "vars": "all", "args": "after-used", "ignoreRestSiblings": false }
        ],
        "no-trailing-spaces": ["error"],
        "space-before-function-paren": "off"
    }
}
